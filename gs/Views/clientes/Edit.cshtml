@model gs.Models.clientes

@{
    ViewBag.Title = "clientes | Edit";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="content-box">
    <div class="content-box-header">
        <h3>clientes<span class="separa"></span><span>Editar</span></h3>
        <span style="float:right; margin-top:15px;">@Html.ActionLink("<- Voltar", "Index")</span>
    </div> <!-- /content-box -->

    <div class="content-box-content">

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @using (Html.BeginForm("Edit", "clientes", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>clientes</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.nome)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.nome, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.nome)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.sobrenome)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.sobrenome, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.sobrenome)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.email, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.email)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.senha)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(model => model.senha, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.senha)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.telefone)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.telefone, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.telefone)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.cep)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.cep, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.cep)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.cpf)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.cpf, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.cpf)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.rua)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.rua, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.rua)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.numero)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.numero, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.numero)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.complemento)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.complemento, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.complemento)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.bairro)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.bairro, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.bairro)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.cidade)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.cidade, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.cidade)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.uf)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.uf, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.uf)
                </div>

                <div class="editor-field">
                    @if (Model.status == 1)
                    {
                        <label>@Html.RadioButtonFor(model => model.status, 0)Não exibir no site</label>
                        <label>@Html.RadioButtonFor(model => model.status, 1, new { @checked = "checked" })Exibir no site</label>
                    }
                    else
                    {
                        <label>@Html.RadioButtonFor(model => model.status, 0, new { @checked = "checked" })Não exibir no site</label>
                        <label>@Html.RadioButtonFor(model => model.status, 1)Exibir no site</label>
                    }
                </div>

                <p>
                    <input type="submit" value="Alterar" />
                </p>

            </fieldset>
        }
    </div>
</div>