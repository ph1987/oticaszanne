@model gs.Models.categorias
@{
    ViewBag.Title = Request.QueryString["s"] + " | Edit";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="content-box">
    <div class="content-box-header">
        <h3>Editar | @Model.titulo</h3>
        <span style="float:right; margin-top:15px;">@Html.ActionLink("<- Voltar", "Index", new { s = Request.QueryString["s"] })</span>
    </div> <!-- /content-box -->
    <div class="content-box-content">

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @using (Html.BeginForm("Edit", "categorias", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>categorias</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.titulo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.titulo, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.titulo)
                </div>

                @if (Request.QueryString["s"] == "estilo_de_oculos")
                {
                    <div class="editor-label">
                        @Html.LabelFor(model => model.descricao)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.descricao)
                        @Html.ValidationMessageFor(model => model.descricao)
                    </div>
                }

                <div class="editor-field">
                    @if (Model.status == 1)
                    {
                        <label>@Html.RadioButtonFor(model => model.status, 0)Não exibir no site</label>
                        <label>@Html.RadioButtonFor(model => model.status, 1, new { @checked = "checked" })Exibir no site</label>
                    }
                    else
                    {
                        <label>@Html.RadioButtonFor(model => model.status, 0, new { @checked = "checked" })Não exibir no site</label>
                        <label>@Html.RadioButtonFor(model => model.status, 1)Exibir no site</label>
                    }
                </div>

                <input type="hidden" name="sect" value="@Request.QueryString["s"]" />

                <p>
                    <input type="submit" value="Salvar" />
                </p>
            </fieldset>
        }
    </div>
</div>

        

