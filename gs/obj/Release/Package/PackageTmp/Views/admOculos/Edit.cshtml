@model gs.Models.oculos
@{
    ViewBag.Title = "óculos | Edit";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="content-box">
    <div class="content-box-header">
        <h3>Editar | @Model.titulo <span style="margin-left:40px; background-color: Lime;">@TempData["acao"]</span></h3>
        <span style="float:right; margin-top:15px;">@Html.ActionLink("<- Voltar", "Index")</span>
    </div> <!-- /content-box -->
    <div class="content-box-content">

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @using (Html.BeginForm("Edit", "admOculos", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>óculos</legend>

                <div class="editor-label">
                    gênero
                </div>
                <div class="editor-field">
                    <input type="checkbox" name="masculino" value="1" @if (Model.masculino == 1) { Write("checked='checked'"); } />masculino<br />
                    <input type="checkbox" name="feminino" value="1" @if (Model.feminino == 1) { Write("checked='checked'"); } />feminino<br />
                    <input type="checkbox" name="infantil" value="1" @if (Model.infantil == 1) { Write("checked='checked'"); } />infantil<br />
                </div>
                <br />
                <div class="editor-label">
                    <p>estilo de óculos</p>
                    <select name="estilo_de_oculos">
                        <option value="0">Selecione um estilo de óculos </option>
                        @foreach (var estilo in ViewBag.estilo_de_oculos)
                        {
                            int achou = 0;
                            foreach(var estilos_selecionados in ViewBag.estilos_selecionados)
                            {
                                if (estilos_selecionados.estilo_id == estilo.id)
                                {
                                    achou = 1;
                                }
                            }
                            <option value="@estilo.id" @if (achou == 1) { Write("selected='selected'"); }>@estilo.titulo </option>
                            
                        }
                    </select>
                </div>
                <br />
                <div class="editor-label">
                    <p>tipo de lente</p>
                    <select name="tipo_de_lente">
                        <option value="0">Selecione um tipo de lente </option>
                        @foreach (var tipo in ViewBag.tipo_de_lente)
                        {
                            int achou = 0;
                            foreach (var tipos_selecionados in ViewBag.tipos_selecionados)
                            {
                                if (tipos_selecionados.lente_id == tipo.id)
                                {
                                    achou = 1;
                                }
                            }
                            <option value="@tipo.id" @if (achou == 1) { Write("selected='selected'"); }>@tipo.titulo </option>

                        }
                    </select>
                </div>
                <br />
                <div class="editor-label">
                    <p>marca</p>
                    <select name="marca">
                        <option value="0">Selecione uma marca </option>
                        @foreach (var m in ViewBag.marcas)
                        {
                            <option value="@m.id" @if (Model.marca == m.id) { Write("selected='selected'"); }>@m.titulo </option>
                        }
                    </select>
                </div>
                <br />
                <div class="editor-label">
                    selecione a(s) cor(es) da armação
                </div>
                <div class="editor-field">
                    @foreach (var armacao in ViewBag.cor_da_armacao)
                    {
                        int achou = 0;
                        foreach (var armacoes_selecionadas in ViewBag.armacoes_selecionadas)
                        {
                            if (armacoes_selecionadas.armacao_id == armacao.id)
                            {
                                achou = 1;
                            }
                        }
                        <input type="checkbox" name="cor_da_armacao" value="@armacao.id" @if (achou == 1) { Write("checked='checked'"); }/> @armacao.titulo <br />
                    }
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.titulo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.titulo, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.titulo)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.modelo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.modelo, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.modelo)
                </div>
                <br />
                <div class="editor-label">
                    preço
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.preco, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.preco)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.preco)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.preco, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.preco)
                </div>
                <br />
                <div class="editor-label">
                    preço com desconto
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.preco_desconto, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.preco_desconto)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.descricao)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.descricao)
                    @Html.ValidationMessageFor(model => model.descricao)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.caracteristicas)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.caracteristicas)
                    @Html.ValidationMessageFor(model => model.caracteristicas)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.medidas)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.medidas)
                    @Html.ValidationMessageFor(model => model.medidas)
                </div>
                <br />
                <div class="editor-field">
                    @if (Model.status == 1)
                    {
                        <label>@Html.RadioButtonFor(model => model.status, 0)Não exibir no site</label>
                        <label>@Html.RadioButtonFor(model => model.status, 1, new { @checked = "checked" })Exibir no site</label>
                    }
                    else
                    {
                        <label>@Html.RadioButtonFor(model => model.status, 0, new { @checked = "checked" })Não exibir no site</label>
                        <label>@Html.RadioButtonFor(model => model.status, 1)Exibir no site</label>
                    }
                </div>
                @if (ViewBag.imgs.Count > 0)
                {
                    <br/>
                    <p><b>imagens</b></p>
                    <span>--------------------------------------------------------------------------------------<br /></span>
                }
                <div class="editor-field">
                    @foreach(var item in ViewBag.imgs)
                    {
                        <img src="@Url.Content("~/uploads/" + @item.filename)" /><br/>
                        <a href="#" onclick="DeleteImg(@item.id, 'admOculos')" style="color:#ff0000;">Remover Imagem</a><br/><br />
                        Write("--------------------------------------------------------------------------------------");<br/><br />
                    }
                </div>

                <div class="editor-label">
                    adicionar imagens
                </div>
                <div class="editor-field">
                    <input type="file" name="files" id="files" multiple />
                </div>

                <p>
                    <input type="submit" value="Salvar" />
                </p>
            </fieldset>
        }
    </div>
</div>



