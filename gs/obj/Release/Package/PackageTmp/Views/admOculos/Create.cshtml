@model gs.Models.oculos

@{
    ViewBag.Title = "óculos | Create";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="content-box">
    <div class="content-box-header">
        <h3>óculos<span class="separa"></span><span>Adicionar</span></h3>
        <span style="float:right; margin-top:15px;">@Html.ActionLink("<- Voltar", "Index")</span>
    </div> <!-- /content-box -->

    <div class="content-box-content">

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        @using (Html.BeginForm("Create", "admOculos", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>óculos</legend>

                <div class="editor-label">
                    gênero
                </div>
                <div class="editor-field">
                    <input type="checkbox" name="masculino" value="1" />masculino<br />
                    <input type="checkbox" name="feminino" value="1" />feminino<br />
                    <input type="checkbox" name="infantil" value="1" />infantil<br />
                </div>
                <br />
                <div class="editor-label">
                    <select name="estilo_de_oculos">
                        <option value="0">Selecione um estilo de óculos </option>
                        @foreach (var estilo in ViewBag.estilo_de_oculos)
                        {
                            <option value="@estilo.id">@estilo.titulo </option>
                        }
                    </select>
                </div>
                <br />
                <div class="editor-label">
                    <select name="tipo_de_lente">
                        <option value="0">Selecione um tipo de lente </option>
                        @foreach (var tipo in ViewBag.tipo_de_lente)
                        {
                            <option value="@tipo.id">@tipo.titulo </option>
                        }
                    </select>
                </div>
                <br/>
                <div class="editor-field">
                    <select name="marca">
                        <option value="0">Selecione uma marca </option>
                        @foreach (var m in ViewBag.marcas)
                        {
                            <option value="@m.id">@m.titulo </option>
                        }
                    </select>
                </div>
                <br />
                <div class="editor-label">
                    selecione a(s) cor(es) da armação
                </div>
                <div class="editor-field">
                    @foreach (var armacao in ViewBag.cor_da_armacao)
                    {
                        <input type="checkbox" name="cor_da_armacao" value="@armacao.id" /> @armacao.titulo <br />
                    }
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.titulo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.titulo, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.titulo)
                </div>
                <br/>
                <div class="editor-label">
                    @Html.LabelFor(model => model.modelo)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.modelo, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.modelo)
                </div>
                <br />
                <div class="editor-label">
                    preço
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.preco, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.preco)
                </div>
                <br />
                <div class="editor-label">
                    preço com desconto
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.preco_desconto, new { @class = "medium-input" })
                    @Html.ValidationMessageFor(model => model.preco_desconto)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.descricao)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.descricao)
                    @Html.ValidationMessageFor(model => model.descricao)
                </div>
                <br />
                <div class="editor-label">
                    @Html.LabelFor(model => model.caracteristicas)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.caracteristicas)
                    @Html.ValidationMessageFor(model => model.caracteristicas)
                </div>
                <br/>
                <div class="editor-label">
                    @Html.LabelFor(model => model.medidas)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.medidas)
                    @Html.ValidationMessageFor(model => model.medidas)
                </div>
                <br />
                <div class="editor-field">
                    <label>@Html.RadioButtonFor(model => model.status, 0)Não exibir no site</label>
                    <label>@Html.RadioButtonFor(model => model.status, 1, new { @checked = "checked" })Exibir no site</label>
                </div>

                <input type="file" name="files" id="files" multiple />

                <p>
                    <input type="submit" value="Adicionar" />
                </p>

            </fieldset>
        }
    </div>
</div>




